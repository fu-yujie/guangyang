@model IPagedList<MonitoringPoint>
@{
    Layout = "~/Views/Shared/_ItemsPartialLayout.cshtml";
    List<SelectListItem> monitoring = ViewBag.Monitoring;
}

@section Head
{
    <th>编号</th>
    <th>监测点类型</th>
    <th>监测地址</th>
    <th>监测点类型</th>
    <th>经度</th>
    <th>纬度</th>
    <th>联系人</th>
    <th>联系方式</th>
    <th>网格名称</th>
    <th class="align-center">操作</th>
}

@section Items
{
    @foreach (var item in Model)
    {
        <tr class="hover">
            <td>@item.Code</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@monitoring.Find(m => m.Value == item.Type).Text</td>
            <td>@item.Longitude</td>
            <td>@item.Latitude</td>
            <td>@item.Contacts</td>
            <td>@item.ContactInformation</td>
            <td>@item.GridName</td>
            <td class="align-center">
                <a class="edit" href="javascript:showDataFormModalDialog('/BasicDataArea/MonitoringPoint/FormForUpdateVarchar?Id=@item.Id&t=@(DateTime.Now.Millisecond)','编辑')">编辑</a>|
                <a class="edit" href="javascript:confirmDelete('/BasicDataArea/MonitoringPoint/RemoveVarChar','Id=@item.Id',showSubmitResult)">删除</a>
            </td>
        </tr>
    }
}
