    <script>
        var r = null;
        $(function () {
            demo(1);
        });
        //以下将以jquery.ajax为例，演示一个异步分页
        function demo(curr) {
            $.post('@Url.Action("GetNoticePageList")', {
                page: curr || 1 //向服务端传的参数，此处只是演示
            }, function (res) {
                var r = JSON.parse(res);
                append(r,curr);
            });
        };

        function append(res,curr) {
            var cont = $(".noticeContent");
            $(".noticeContent li").remove();
            var total = res.total;
            for (var i = 0; i < res.data.length; i++) {
                var li="<li style=\"float:inherit\"><a style=\"white-space: nowrap; overflow: hidden; text-overflow: ellipsis;\" href=\"@Url.Action("GetNoticeById")?ID="+res.data[i].ID+"\" target=\"_blank\" title=";
                li += "" + res.data[i].ID + "";
                li+=">";
                li += "" + res.data[i].Title + "";
                li+="</a><span>";
                li += "" + res.data[i].ReleaseDate + "";
                li += "</span><br /></li>";
                cont.append(li);
            }
            laypage({
                cont: 'page1', //容器。值支持id名、原生dom对象，jquery对象。【如该容器为】：<div id="page1"></div>
                pages: total, //通过后台拿到的总页数
                curr: curr || 1, //当前页
                jump: function (obj, first) { //触发分页后的回调
                    if (!first) { //点击跳页触发函数自身，并传递当前页：obj.curr
                        demo(obj.curr);
                    }
                }
            });
        }

    </script>
