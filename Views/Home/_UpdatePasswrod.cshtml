<link href="~/Assets/css/layout.css" rel="stylesheet" type="text/css" />
<link href="~/Assets/Plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<script src="~/Assets/Plugins/jquery.unobtrusive-ajax/jquery.unobtrusive-ajax.min.js"></script>
@model BasicUPMS.Models.UpdatePasswordForUsers
<form action="@( "Home/" + ViewBag.OperateType.ToString() + "/" + Model.Id)" data-ajax="true" data-ajax-method="POST" data-ajax-success="@(ViewBag.SubmitCallback ?? "showSubmitResult")" data-ajax-failure="showErrorMsg" id="editForm">
    <div class="page">
        <table class="table tb-type2 nobdb">
            <tbody>
                @Html.AntiForgeryToken()
                <tr class="noborder">
                    <td><em>用户名:</em></td>
                    <td class="vatop rowform">
                        <label name="LoginName">@Model.UserName</label>
                    </td>
                    <td class='fontcolor'>*</td>
                </tr>
                <tr class="noborder">
                    <td><em>旧密码:</em></td>
                    <td class="vatop rowform">
                        <input type="password" class="txt" name="OldPassword" value="@Model.OldPassword">
                    </td>
                    <td class='fontcolor'>*</td>
                </tr>
                <tr class="noborder">
                    <td><em>新密码:</em></td>
                    <td class="vatop rowform">
                        <input type="password" class="txt" name="NewPassword" value="@Model.NewPassword">
                    </td>
                    <td class='fontcolor'>*</td>
                </tr>
                <tr class="noborder">
                    <td><em>确认密码:</em></td>
                    <td class="vatop rowform">
                        <input type="password" class="txt" name="ConfirmPassword" value="@Model.ConfirmPassword">
                    </td>
                    <td class='fontcolor'>*</td>
                </tr>
            </tbody>
            <tfoot></tfoot>
        </table>
    </div>
</form>